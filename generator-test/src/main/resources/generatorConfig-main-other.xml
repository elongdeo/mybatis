<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>
    <context id="DB2Tables" targetRuntime="MyBatis3">
        <!-- 使用自定义的插件 -->
        <plugin type="RhinoPlugin">
            <property name="restrictField" value="true"/>
        </plugin>
        <!--<plugin type="org.mybatis.generator.plugins.ToStringPlugin" />-->
        <!-- 使用自定义的注释生成器 -->
        <commentGenerator type="RhinoCommentGenerator">
            <property name="suppressDate" value="true"/>
            <!-- 是否去除自动生成的注释 true：是 ： false:否 -->
            <property name="suppressAllComments" value="false"/>
        </commentGenerator>
        <!--数据库链接URL，用户名、密码 -->
        <jdbcConnection driverClass="com.mysql.jdbc.Driver"
                        connectionURL="jdbc:mysql://tddl.daily.alibaba.net:3306/RHINO_APS_SERVICE_APP"
                        userId="RHINO_APS_SERVICE_APP"
                        password="123456">
        </jdbcConnection>
        <javaTypeResolver>
            <property name="forceBigDecimals" value="false"/>
        </javaTypeResolver>
        <!-- 生成模型的包名和位置 -->
        <javaModelGenerator targetPackage="com.elong.deo.test.entity"
                            targetProject="/Users/dingyinlong/devtools/idea-workspace-skill/rhino-mybatis-generator/generator-test/src/main/java">
            <property name="enableSubPackages" value="true"/>
            <property name="trimStrings" value="true"/>
        </javaModelGenerator>
        <!-- 生成映射文件的包名和位置 -->
        <sqlMapGenerator targetPackage="mapper"
                         targetProject="/Users/dingyinlong/devtools/idea-workspace-skill/rhino-mybatis-generator/generator-test/src/main/resources">
            <property name="enableSubPackages" value="true"/>
        </sqlMapGenerator>
        <!-- 生成DAO的包名和位置 -->
        <javaClientGenerator type="XMLMAPPER" targetPackage="com.elong.deo.test.mapper"
                             targetProject="/Users/dingyinlong/devtools/idea-workspace-skill/rhino-mybatis-generator/generator-test/src/main/java">
            <property name="enableSubPackages" value="true"/>
        </javaClientGenerator>
        <table tableName="aps_plan_entity" domainObjectName="PlanEntityDO"/>
    </context>

</generatorConfiguration>
