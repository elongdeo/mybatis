<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>
    <context id="DB2Tables" targetRuntime="MyBatis3">
        <!-- 使用自定义的插件 -->
        <plugin type="BoltPlugin">
            <!-- 使用lombok -->
            <property name="usingLombok" value="true"/>
            <!-- 使用lombok.Builder -->
            <property name="usingLombokBuilder" value="false"/>
            <!-- 使用lombok.experimental.Accessors -->
            <property name="usingLombokAccessors" value="true"/>
            <!-- 使用lombok.experimental.Accessors(fluent = true) -->
            <property name="usingLombokAccessorsFluent" value="true"/>
            <!-- 使用lombok.experimental.Accessors(chain = true) -->
            <property name="usingLombokAccessorsChain" value="false"/>
            <!-- 使用lombok.NoArgsConstructor -->
            <property name="usingLombokNoArgsConstructor" value="true"/>
            <!-- service包路径 -->
            <property name="servicePackage" value="io.github.elongdeo.crm.service"/>
            <!-- serviceImpl包路径 -->
            <property name="serviceImplPackage" value="io.github.elongdeo.crm.service.impl"/>
            <!-- hsfServiceImpl包路径 -->
            <property name="hsfServiceImplPackage" value="io.github.elongdeo.crm.hsf.impl"/>
            <!-- hsfService接口包路径 -->
            <property name="hsfServicePackage" value="io.github.elongdeo.crm.hsf"/>
            <!-- dto包路径 -->
            <property name="dtoPackage" value="io.github.elongdeo.crm.dto"/>
            <!-- hsf接口及dto工程目录 -->
            <property name="hsfProject" value="./src/main/java"/>
        </plugin>
        <!-- 使用自定义的注释生成器 -->
        <commentGenerator type="RhinoCommentGenerator">
            <property name="suppressDate" value="true"/>
            <!-- 是否去除自动生成的注释 true：是 false:否  -->
            <property name="suppressAllComments" value="false"/>
        </commentGenerator>
        <!--数据库链接URL，用户名、密码 -->
        <jdbcConnection driverClass="com.mysql.jdbc.Driver"
                        connectionURL="jdbc:mysql://tddl.daily.alibaba.net:3306/RHINO_DTECH_TECHNOLOGY_DB_APP"
                        userId="RHINO_DTECH_TECHNOLOGY_DB_APP"
                        password="123456">
        </jdbcConnection>
        <javaTypeResolver>
            <property name="forceBigDecimals" value="false"/>
        </javaTypeResolver>
        <!-- 生成模型的包名和位置 -->
        <javaModelGenerator targetPackage="io.github.elongdeo.crm.dal.entity"
                            targetProject="./src/main/java">
            <property name="enableSubPackages" value="true"/>
            <property name="trimStrings" value="true"/>
        </javaModelGenerator>
        <!-- 生成映射文件的包名和位置 -->
        <sqlMapGenerator targetPackage="io.github.elongdeo.crm.dal.mapper"
                         targetProject="./src/main/resources">
            <property name="enableSubPackages" value="true"/>
        </sqlMapGenerator>
        <!-- 生成DAO的包名和位置 -->
        <javaClientGenerator type="XMLMAPPER" targetPackage="io.github.elongdeo.crm.dal.mapper"
                             targetProject="./src/main/java">
            <property name="enableSubPackages" value="true"/>
        </javaClientGenerator>
        <!-- 要生成entity/mapper的表名及自定义的DO名 -->
        <table tableName="marker_pkg" domainObjectName="MarkerPkgDO" enableUpdateByExample="true">
            <columnOverride column="dtech_pkg_id">
                <!-- 此字段为本表片键 -->
                <property name="shardingKey" value="true"/>
            </columnOverride>
            <columnOverride column="biz_id_marker_pkg">
                <!-- 此字段为本表bizId -->
                <property name="bizIdForSelf" value="true"/>
            </columnOverride>
        </table>
    </context>

</generatorConfiguration>
